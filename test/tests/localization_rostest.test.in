<?xml version="1.0"?>
<launch>
  <param name="use_sim_time" value="true" />
  <arg name="without_imu" default="false" />

  <node pkg="rosbag" type="play" name="playback" args="--clock -r 2.0 -d 4.0 @PROJECT_BINARY_DIR@/test/short_test3.bag" />

  <test test-name="compare_pose" pkg="mcl_3dl" type="compare_pose" time-limit="400.0">
    <param name="error_limit" value="0.3" />
  </test>
  
  <node pkg="rostopic" type="rostopic" name="publish_ref" args="pub -l -f @PROJECT_BINARY_DIR@/test/short_test_ref.topic /compare_pose/poses_ref nav_msgs/Path" />

  <node pkg="mcl_3dl" type="mcl_3dl" name="mcl_3dl" output="log">
    <param name="compatible" value="1" />
    <param name="skip_measure" value="2" />
    <param name="without_imu" value="false" type="bool" />
  </node>
</launch>
